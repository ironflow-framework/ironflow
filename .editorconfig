# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# PHP files
[*.php]
indent_style = space
indent_size = 4

# Composer files
[{composer.json,composer.lock}]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 4

# XML files
[*.xml]
indent_style = space
indent_size = 4

# Config files
[*.{ini,conf}]
indent_style = space
indent_size = 4